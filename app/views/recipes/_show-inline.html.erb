<div class="card">
  <div class="card-body">
    <div class="card-title row justify-content-around">
    <div class="col">
      <%= @recipe.title %>
      </div>
      <div class="col text-end">
      <%= link_to "Show", recipe_path(@recipe), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="card-text">
    <div class="w-100">
      <% if @recipe.picture.attached? %>
        <%= image_tag @recipe.picture, class: 'p-1 m-auto', style: 'height: 100px' %>
      <% end %>
    </div>
    <h3>Description</h3>
    <%== markdown(@recipe.body) %>
    </div>
  </div>
</div>